<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/thevillage"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.84" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/logo" />

            <Button
                android:id="@+id/buttonClassicGarden"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:background="#91A3B0"
                android:text="Village Classic Garden View 25m²"
                android:textColor="#FFFFFF"
                android:textColorLink="#91A3B0" />

            <Button
                android:id="@+id/buttonBeachFront"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:background="#91A3B0"
                android:text="Village Beach Front 25m²"
                android:textColor="#FFFFFF"
                android:textColorLink="#91A3B0" />

            <Button
                android:id="@+id/buttonFamilySuite"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:background="#91A3B0"
                android:text="Village Family Suite 40m²"
                android:textColor="#FFFFFF"
                android:textColorLink="#91A3B0" />

            <Button
                android:id="@+id/buttonVillageSuite"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:background="#91A3B0"
                android:text="Village Suite 50m²"
                android:textColor="#FFFFFF"
                android:textColorLink="#91A3B0" />

            <Button
                android:id="@+id/buttonPresidentSuite"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:background="#91A3B0"
                android:text="Presidential Suite Sea View 100m²"
                android:textColor="#FFFFFF"
                android:textColorLink="#91A3B0" />
        </LinearLayout>

    </ScrollView>

    



</LinearLayout>